# Editor configuration, see https://editorconfig.org
root = true

[*]
# Use Unix line endings
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_size = 4
max_line_length = 120

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[{Makefile,**.mk}]
indent_style = tab

[*.sql]
indent_style = space
